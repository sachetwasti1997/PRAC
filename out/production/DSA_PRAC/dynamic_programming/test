class Solution {
  fun minCost(costs: Array<IntArray>): Int {
    if (costs.isEmpty()) return 0
    val m = costs.size
    val n = costs[0].size
    val dp = IntArray(n){-1}
    var res = Int.MAX_VALUE
    fun calc(ex: Int, i: Int): Int {
      if (i >= m) return 0
      var cost = 0
      for (j in 0 until n) {
        if (ex != j) {
          cost += calc(j, i+1)
        }
        res = minOf(res, cost)
      }
      return res
    }
    return calc(-1, 0)
  }
}